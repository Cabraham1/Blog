<h2>Details of a selected user</h2>

<div class='details-header'>
  <img id='detail-img' src="<%= @user.photo %>" alt="User Photo">
  <span class='detail-item details-name'><%= @user.name %></span>
  <span class='detail-item'>Number of Posts: <%= @user.posts_counter %></span>
</div>

<div class='bio-details'>
  <p>Bio</p>
  <p><%= @user.bio %></p>
</div>

<% @user.recent_posts.each_with_index do |post, index|%>
  <div class='bio-details'>
    <p>Post #<%= index+1 %></p>
    <p>
      <%= post.text %>
    </p>
    <div class='post-like-comment'>
      <span class='detail-item'>Likes: <%= post.likes_counter %></span>
      <span class='detail-item'>Comments: <%= post.comments_counter %></span>
    </div>
  </div>
<% end %>

<%= link_to "See all posts", user_posts_path(@user.id), class: 'detail-item' %>
