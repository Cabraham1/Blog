  <%= stylesheet_link_tag "style" %>
<p> This is the list of posts</p>

<div class='details-header'>
<img id='detail-img' src="<%= @user.photo %>" alt="User Photo">
<span class='detail-item details-name'><%= @user.name %></span>
<span class='detail-item'>Number of Posts: </span><%= @user.posts_counter %>
</div>

<% @posts.each_with_index do |post, index| %>
<div class='bio-details'>
<p>Post #<%= index+1 %></p>
  <p>
  <%= post.title %>
</p>

<p>
<%= post.text %>
</p>
  <div class='post-like-comment'>
  <span class='detail-item'>Likes : <%= post.likes_counter %></span>
  <span class='detail-item'>Comments : <%= post.comments_counter %></span>
  </div>
<ul>
  <% post.return_recent_comments.each do |comment| %>
  <li> <%= comment.text %></li>
 <% end %> 
  </ul>
  </div>

<a href="/users/<%= @user.id %>/posts/<%= post.id %>"> See more</a>
<% end %>
</html>