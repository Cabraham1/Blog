
<div class='Post-dec'> 
<h2><%= @post.title%> by <%= @post.user.name %></h2>
<p class="post-head-counter">
      Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %>
  </p>
  </div>
<p>
<%= @post.text%>
</p>

<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.user.name %> <b>:</b> <%= comment.text %></li>
  <% end %>
</ul>

